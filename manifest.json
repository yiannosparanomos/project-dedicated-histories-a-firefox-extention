{
  "manifest_version": 2,
  "name": "Container Profile Manager",
  "version": "1.0",
  "description": "Manages isolated profiles with password protection.",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "contextualIdentities",
    "activeTab",
    "webNavigation", 
    "commands"
  ],

  "browser_action": {
    "default_popup": "./views/popup.html",
    "default_icon": {
      "16": "icons/history-mod.png",
      "48": "icons/history-mod.png",
      "128": "icons/history-mod.png"
    }
  },
  "icons": {
    "16": "icons/history-mod.png",
    "48": "icons/history-mod.png",
    "128": "icons/history-mod.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },

  "web_accessible_resources": [
    "scripts/mainPopup/popup.js",
    "scripts/utilities/createView.js",
    "scripts/utilities/general.js",
    "scripts/utilities/historyView.js",
    "scripts/utilities/manageView.js",
    "scripts/background.js"
  ]
  
}
